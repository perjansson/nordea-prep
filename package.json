{
    "name": "nordea-prep",
    "version": "1.0.0",
    "license": "MIT",
    "private": true,
    "workspaces": ["packages/*"],
    "scripts": {
        "start": "run-p start:*",
        "start:web": "cd packages/web && yarn start",
        "start:components": "cd packages/components && yarn build:watch",
        "start:mockserver": "cd packages/mockserver && yarn start",
        "build": "run-p build:*",
        "build:web": "cd packages/web && yarn build:prod",
        "build:components": "cd packages/components && yarn build:prod"
    },
    "devDependencies": {
        "babel-cli": "^6.26.0",
        "babel-eslint": "8.2.3",
        "lerna": "^2.11.0",
        "npm-run-all": "4.1.3",
        "prettier": "1.12.1"
    }
}
